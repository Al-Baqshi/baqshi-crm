---
import { getLocalizedSettings } from "@/lib/localization-helpers";
import { Icon } from "astro-icon/components";

const { widget } = getLocalizedSettings();
---

<a
	id="whatsapp-widget"
	transition:persist
	data-widget-appear
	href={widget.link}
	class="group fixed w-14 h-14 bottom-5 lg:bottom-10 opacity-0 right-5 lg:right-10 bg-[#25d366] text-white rounded-full flex items-center justify-center shadow-md hover:shadow-lg z-20"
	target="_blank"
>
	<Icon
		name={widget.icon}
		size={30}
		class="group-hover:scale-105 transition-all"
	/>
</a>

<script>
	import { gsap } from "gsap";

	let ctx: gsap.Context | null = null;

	const componentVisible = (): boolean => {
		return document.getElementById("whatsapp-widget") !== null;
	};

	const initWidget = () => {
		if (componentVisible()) {
			// Initialize all animations and add all to the current gsap context
			ctx = gsap.context(() => {
				gsap.to("[data-widget-appear]", {
					opacity: 1,
					duration: 1,
					ease: "none",
				});
			});
		}
	};

	// Initialize on page load
	document.addEventListener("astro:page-load", initWidget, { once: true });

	// Also initialize on DOMContentLoaded for static sites
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initWidget);
	} else {
		initWidget();
	}

	// Additional initialization for static hosting
	document.addEventListener('static-site-ready', initWidget);
	document.addEventListener('gsap-ready', initWidget);
</script>
