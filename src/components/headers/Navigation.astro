---
import { Image } from "astro:assets";
import { getLocalizedSettings } from "@/lib/localization-helpers";

const { header, contacts } = getLocalizedSettings();

const logoPath = header.logo?.imagePath;

const images = import.meta.glob<{ default: ImageMetadata }>(
	"/src/assets/global/**/*.{webp,jpeg,jpg,png,gif,svg}",
);
---

<style>
	.menu-icon {
		position: relative;
		width: 50px;
		height: 50px;
		cursor: pointer;
	}
	.menu-icon .menu-icon__checkbox {
		display: block;
		width: 100%;
		height: 100%;
		position: relative;
		cursor: pointer;
		z-index: 2;
		-webkit-touch-callout: none;
		position: absolute;
		opacity: 0;
	}
	.menu-icon div {
		margin: auto;
		position: absolute;
		top: 0;
		right: 0;
		left: 0;
		bottom: 0;
		width: 22px;
		height: 12px;
	}
	.menu-icon span {
		position: absolute;
		display: block;
		width: 100%;
		height: 2px;
		background-color: var(--bar-bg, #000);
		border-radius: 5rem;
		transition: all 0.2s cubic-bezier(0.1, 0.82, 0.76, 0.965);
	}
	.menu-icon span:first-of-type {
		top: 0;
	}
	.menu-icon span:last-of-type {
		bottom: 0;
	}
	.menu-icon.active span:first-of-type,
	.menu-icon .menu-icon__checkbox:checked + div span:first-of-type {
		transform: rotate(45deg);
		top: 5px;
	}
	.menu-icon.active span:last-of-type,
	.menu-icon .menu-icon__checkbox:checked + div span:last-of-type {
		transform: rotate(-45deg);
		bottom: 5px;
	}
	.menu-icon.active:hover span:first-of-type,
	.menu-icon.active:hover span:last-of-type,
	.menu-icon:hover .menu-icon__checkbox:checked + div span:first-of-type,
	.menu-icon:hover .menu-icon__checkbox:checked + div span:last-of-type {
		width: 22px;
	}
	@media (min-width: 1024px) {
		.menu-icon:hover span:first-of-type {
			width: 26px;
		}
		.menu-icon:hover span:last-of-type {
			width: 12px;
		}
	}
	#navigation {
		pointer-events: none;
	}
	#navigation-background {
		background-color: rgba(0, 0, 0, 0.95);
		backdrop-filter: blur(10px);
	}
	[data-nav-border-reveal] {
		--tw-border-opacity: 0;
	}
	.active-locale {
		font-weight: bolder;
	}
</style>

<style is:global>
	[data-nav-text-reveal] {
		opacity: 0;
	}
	[data-nav-text-reveal] > div {
		position: relative;
		margin: 0;
	}
	.split-parent {
		overflow: hidden;
	}
	.split-child {
		display: inline-block;
	}
</style>

<header class="fixed w-full z-30">
	<div
		class="items-center auto-cols-fr grid-cols-2 lg:grid-cols-2 grid-rows-[auto] justify-between left-0 py-3.5 px-6 lg:px-20 right-0 top-0 grid gap-4"
	>
		<div
			class="items-center flex-wrap justify-start relative flex text-black z-20"
		>
			<a
				href="/"
				id="header-logo"
				class="text-black justify-self-start lg:justify-self-center underline inline-block max-w-full transition-opacity duration-300"
			>
				<img
					src={logoPath}
					alt="BaQshi Logo"
					width="200"
					height="60"
					class="h-12 w-auto transition-all duration-300 hover:scale-105"
				/>
			</a>
		</div>
		<div
			class="col-start-2 hidden lg:flex justify-center items-center h-full"
		>
			<a
				data-company-name
				class="pb-4 group"
				href="/"
			>
				<div
					class="w-20 h-1 bg-black rounded-full group-hover:bg-gray-800 transition-colors duration-500"
				>
				</div>
			</a>
		</div>
		<div class="justify-self-end col-span-1 row-span-1 z-40 col-start-3">
			<div
				class="items-center justify-center relative flex h-16 lg:w-24 lg:h-24"
			>
				<div class="menu-icon">
					<input
						id="menu-toggle"
						class="menu-icon__checkbox"
						type="checkbox"
					/>
					<div>
						<span></span>
						<span></span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<nav
		id="navigation"
		class="items-center bottom-0 text-sm font-medium justify-center left-0 fixed right-0 top-0 flex h-screen z-30"
	>
		<div
			id="navigation-background"
			class="bg-black w-full h-full absolute top-0 left-0 opacity-0 transition-opacity duration-500"
		>
		</div>
		<div
			class="items-center font-semibold flex-wrap justify-center flex flex-col overflow-hidden z-20 w-full relative"
		>
			<button
				id="close-nav"
				class="absolute top-8 right-8 text-white text-4xl font-bold hover:text-gray-300 transition-colors duration-200 z-30"
				aria-label="Close navigation"
			>
				Ã—
			</button>
			<div class="flex flex-col items-start md:items-center pt-10">
				{
					header.pages.map((page, index) => (
						<a
							data-nav-item
							href={page.link}
							class="items-center justify-start flex overflow-hidden gap-4 relative pr-10"
						>
							<div
								data-nav-border-reveal
								data-nav-text-reveal
								class="text-white items-center cursor-pointer justify-center pt-1 flex w-9 h-9 border-2 border-white border-solid rounded-full"
							>
								0{index + 1}
							</div>
							<div
								data-nav-text-reveal
								class="cursor-pointer overflow-hidden text-4xl xs:text-5xl md:text-[5.63rem] !leading-[1.15] text-white"
							>
								{page.title}
							</div>
						</a>
					))
				}

				{header.actions && header.actions.length > 0 && (
					<div class="flex flex-col items-start md:items-center mt-8 gap-4">
						{header.actions.map((action, index) => (
							<a
								data-nav-item
								href={action.link}
								class="items-center justify-start flex overflow-hidden gap-4 relative pr-10"
							>
								<div
									data-nav-border-reveal
									data-nav-text-reveal
									class="text-white items-center cursor-pointer justify-center pt-1 flex w-9 h-9 border-2 border-white border-solid rounded-full"
								>
									{index + header.pages.length + 1}
								</div>
								<div
									data-nav-text-reveal
									class="cursor-pointer overflow-hidden text-4xl xs:text-5xl md:text-[5.63rem] !leading-[1.15] text-white"
								>
									{action.title}
								</div>
							</a>
						))}
					</div>
				)}
			</div>
		</div>
	</nav>
</header>

<script>
	import { gsap } from "gsap";
	import { ScrollTrigger } from "gsap/ScrollTrigger";
	// Uncomment if you have premium version of gsap
	// import { SplitText } from "gsap/SplitText";
	// import { DrawSVGPlugin } from "gsap/DrawSVGPlugin";
	import { BlurPlugin } from "@/utils/gsap-blur";
	import { LifecycleManager } from "@/utils/lifecycle-manager";

	gsap.registerPlugin(
		ScrollTrigger,
		/*SplitText, DrawSVGPlugin,*/
		BlurPlugin,
	);

	const lm = new LifecycleManager();

	const initNavigation = () => {
		if (!document.getElementById("navigation")) return;

		lm.initializeContext();
		const ctx = lm.ctx;

		if (!ctx) return;

		ctx.add(() => {
			gsap.timeline({
				defaults: {
					ease: "power1.inOut",
					stagger: 0.2,
				},
				scrollTrigger: {
					trigger: "body",
					start: "50px",
					toggleActions: "play none none reverse",
				},
			})
				.to("[data-company-name]", { opacity: 0 })
				.to("#header-logo", {
					opacity: 0,
					y: -20,
					scale: 0.8,
					rotation: -5
				}, "<")
				.set("#header-logo", { pointerEvents: "none" });

			// Add scroll-triggered text wave animation
			gsap.timeline({
				scrollTrigger: {
					trigger: "body",
					start: "10px",
					end: "40px",
					scrub: 1,
				},
			})
				.to(".logo-text", {
					css: { animation: "textWave 1.5s ease-in-out infinite" }
				});

			const tl = gsap.timeline({
				paused: true,
				defaults: {
					duration: 1,
					ease: "power3.out",
				},
			});

			// const childSplit = new SplitText("[data-nav-text-reveal]", {
			// 	type: "lines",
			// 	linesClass: "split-child",
			// });
			// const parentSplit = new SplitText("[data-nav-text-reveal]", {
			// 	// type: "lines",
			// 	linesClass: "split-parent",
			// });

			tl.set("#navigation", { pointerEvents: "auto" })
				.to("#navigation-background", { opacity: 1, duration: 0.3 }, "<")
				.to(
					"[data-nav-text-reveal]",
					{ opacity: 1, duration: 0.5, ease: "none" },
					"<=0.5",
				);
			// .from(
			// 	childSplit.lines,
			// 	{
			// 		duration: 1,
			// 		yPercent: 300,
			// 		skewY: 7,
			// 		stagger: 0.02,
			// 	},
			// 	"<",
			// );

			const menuItems = gsap.utils.toArray(
				"[data-nav-item]",
			) as HTMLElement[];

			menuItems.forEach((menuItem) => {
				const menuItemTl = gsap
					.timeline({
						defaults: { duration: 0.4, ease: "none" },
						paused: true,
					})
					.to(menuItem, {
						blur: 2,
					})
					.to(menuItem, {
						blur: 1,
					});
				menuItem.addEventListener("mouseenter", (e) =>
					menuItemTl.play(),
				);
				menuItem.addEventListener("mouseleave", (e) =>
					menuItemTl.pause(0),
				);
			});

			// Get the checkbox
			const menuToggle = document.getElementById("menu-toggle");
			const closeNav = document.getElementById("close-nav");

			// Add an event listener to the checkbox
			menuToggle?.addEventListener("change", function () {
				if ((this as HTMLInputElement).checked) {
					tl.play();
				} else {
					tl.reverse();
				}
			});

			// Add close button functionality
			closeNav?.addEventListener("click", function () {
				if (menuToggle) {
					(menuToggle as HTMLInputElement).checked = false;
					tl.reverse();
				}
			});

			// Close menu when clicking on navigation background
			document.getElementById("navigation-background")?.addEventListener("click", function () {
				if (menuToggle) {
					(menuToggle as HTMLInputElement).checked = false;
					tl.reverse();
				}
			});
		});
	};

	// Initialize navigation
	lm.onElementLoaded("navigation", initNavigation);

	// Also initialize on DOMContentLoaded for static sites
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initNavigation);
	} else {
		initNavigation();
	}

	// Additional initialization for static hosting
	document.addEventListener('static-site-ready', initNavigation);
	document.addEventListener('gsap-ready', initNavigation);
</script>
